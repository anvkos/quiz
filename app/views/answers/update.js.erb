$('.answer-errors').html('');
<% if @answer.errors.present? %>
    <% @answer.errors.full_messages.each do |message| %>
        $('#edit-answer-<%= @answer.id %> .answer-errors').append('<span><%= j message %></span>');
    <% end %>
<% else %>
    $('.answer-<%= @answer.id %>').html('<%= j render @answer %>');
<% end %>
